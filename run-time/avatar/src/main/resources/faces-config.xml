<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

    <factory>
      <lifecycle-factory>com.sun.faces.lifecycle.ExtensionsLifecycleFactoryImpl</lifecycle-factory>
    </factory>

    <component>

        <component-type>javax.faces.ViewRoot</component-type>
        <component-class>com.sun.faces.extensions.avatar.components.ProcessingContextViewRoot</component-class>

        <component-extension>
            <component-family>javax.faces.ViewRoot</component-family>
        </component-extension>

    </component>
    
    <!-- Component elements -->
    <component>
        <component-type>com.sun.faces.AjaxZone</component-type>
        <component-class>com.sun.faces.extensions.avatar.components.AjaxZone</component-class>
    </component>

  <render-kit>

    <renderer>
      <description>
        override the viewroot
      </description>
      <component-family>javax.faces.ViewRoot</component-family>
      <renderer-type>javax.faces.ViewRoot</renderer-type>
      <renderer-class>com.sun.faces.renderkit.ProcessingContextViewRootRenderer</renderer-class>
      
    </renderer>

    <renderer>
        <component-family>com.sun.faces.AjaxZone</component-family>
        <renderer-type>com.sun.faces.AjaxZone</renderer-type>
        <renderer-class>com.sun.faces.renderkit.AjaxZoneRenderer</renderer-class>
    </renderer>
    
  </render-kit>


  <lifecycle>
    <phase-listener>com.sun.faces.util.ResourcePhaseListener</phase-listener>
  </lifecycle>


</faces-config>
