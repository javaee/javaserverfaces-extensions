<project name="jsf-extensions-previous-versions-common" basedir=".">

    <property name="mvn.spec.version" value="${spec.version}-${build.type}"/>
    <property name="target.dir" value="${basedir}/target"/>

   <!-- Convenience macro for invoking mvn -->
   <macrodef name="jsfext.mvn">        
        <attribute name="pomFile"/>
        <attribute name="mvnSpecVersion"/>
        <attribute name="mvnArtifactId"/>
        <attribute name="goals"/>
        <sequential>           
            <exec os="SunOS" dir="${basedir}" failonerror="yes" 
                             executable="mvn">
              <arg line="-f @{pomFile} -DmvnArtifactId=@{mvnArtifactId} -DmvnSpecVersion=@{mvnSpecVersion} @{goals}" />
            </exec>
            <exec os="Linux" dir="${basedir}" failonerror="yes" 
                             executable="mvn">
              <arg line="-f @{pomFile} -DmvnArtifactId=@{mvnArtifactId} -DmvnSpecVersion=@{mvnSpecVersion} @{goals}" />
            </exec>
            <exec os="Windows 2000" dir="${basedir}" executable="mvn.exe" 
                             failonerror="yes">
              <arg line="-f @{pomFile} -DmvnArtifactId=@{mvnArtifactId} -DmvnSpecVersion=@{mvnSpecVersion} @{goals}" />
            </exec>
            <exec os="Windows XP" dir="${basedir}" executable="mvn.exe" 
                             failonerror="yes">
              <arg line="-f @{pomFile} -DmvnArtifactId=@{mvnArtifactId} -DmvnSpecVersion=@{mvnSpecVersion} @{goals}" />
            </exec>
            <exec os="Mac OS X" dir="${basedir}" executable="mvn" 
                             failonerror="yes">
              <arg line="-f @{pomFile} -DmvnArtifactId=@{mvnArtifactId} -DmvnSpecVersion=@{mvnSpecVersion} @{goals}" />
            </exec>
        </sequential>           
   </macrodef>        

   <macrodef name="jsfext.publishJar">
     <!-- example: jsf-extensions -->
     <attribute name="binaryName" />
     <!-- example: 0.1-rc1 -->     
     <attribute name="binaryVersion" />
     <!-- example: jsf-extensions-common -->     
     <attribute name="artifactId" />
     <sequential>

      <untar src="@{binaryName}-@{binaryVersion}.tar.gz" dest="${target.dir}/tmp" 
             compression="gzip" overwrite="true">
        <patternset>
           <include name="jsf-extensions/lib/@{artifactId}-0.1-SNAPSHOT.jar" />
           <exclude name="**/*-sources.jar" />
        </patternset>
      </untar>
      <unjar src="${target.dir}/tmp/jsf-extensions/lib/@{artifactId}-0.1-SNAPSHOT.jar" overwrite="yes" 
             dest="${target.dir}/classes"/>
      <jsfext.mvn pomfile="pom-template.xml" goals="install" 
                  mvnArtifactId="@{artifactId}" mvnSpecVersion="@{binaryVersion}" />
      <jsfext.mvn pomfile="pom-template.xml" goals="deploy" 
                  mvnArtifactId="@{artifactId}" mvnSpecVersion="@{binaryVersion}" />

     </sequential>
   </macrodef>

</project>
